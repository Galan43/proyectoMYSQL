<%- include("templates/encabezado") %> <%- include("templates/menu") %>
<style>
  
  h1 {
      color: #333; 
      font-size: 24px; 
      font-weight: bold;
  }


  table {
      width: 100%;
      border-collapse: collapse; 
      margin-top: 10px;
  }


  th {
      background-color: #f2f2f2;
      color: #333;
      font-weight:bolder; 
      padding: 16px;
      text-align: left; 
  }


  td {
      padding: 8px; 
      border-bottom: 1px solid #ccc;
  }


  a {
      text-decoration: none; 
      color: #333; 
      margin-right: 5px;
  }

  
  a:hover {
      text-decoration: underline; 
  }
</style>

<h1>Mostrar usuarios</h1>
<table class="styled-table">
  <thead>
    <th>Id</th>
    <th>Nombre</th>
    <th>Usuario</th>
    <th>Password</th>
    <th>Editar</th>
  </thead>
  <tbody>
    <% usuarios.forEach((usuario)=>{ %>
    <tr>
      <td><%=usuario.id%></td>
      <td><%=usuario.nombre%></td>
      <td><%=usuario.usuario%></td>
      <td><%=usuario.password%></td>
      <td>
        <a href="/modificarUsuario/<%=usuario.id%>">Editar</a> /
        <a href="/borrarUsuario/<%=usuario.id%>">Borrado fisico</a> /
        <a href="/borrarUsuario2/<%=usuario.id%>">Borrado logico</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
